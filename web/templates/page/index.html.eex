<ol>
  <%= for story <- @stories do %>
    <li class="list-item list-title">
      <div>
        <a href="<%= story[:url] %>">
          <%= story[:title] %>
        </a>
        <% if story[:url] do %>
        <small>
          (<a href="/from"><%= URI.parse(story[:url]).authority %></a>)
        </small>
        <% end %>
      </div>
      <small>
        <%= story[:score] %> points by <%= story[:by] %> at <%= story[:time] %>
        | hide
        | <a href="/item/<%= story[:id] %>"><%= story[:descendants] %> comments</a>
      </small>
    </li>
  <% end %>
</ol>
<a href="/news?p=<%= @next_page %>">More</a>